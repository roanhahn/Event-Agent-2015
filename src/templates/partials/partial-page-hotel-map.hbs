<section class="section section--grey">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				{{> partial-ticket-form }}
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<h3 class="fold-h3">MYSTERYLAND SELECTED HOTELS</h3>
			</div>
			<div class="col-md-6">
				<ul class="switch-display clearfix">
					<li class="switch-display-list-item switch-display-list-item--margin">Sort by</li>
					<li class="switch-display-list-item switch-display-list-item--margin">
						<form>
							<fieldset>
								<select name="" id="checkin" class="form-select">
									<option value="1" class="form-option">Price low - high</option>
									<option value="2" class="form-option">Price high -low</option>
									<option value="3" class="form-option">Popular</option>
									<option value="4" class="form-option">A-Z</option>
									<option value="5" class="form-option">Z-A</option>
								</select>
							</fieldset>
						</form>
					</li>
					<li class="switch-display-list-item active"><span class="display-options-map"></span></li>
					<li class="switch-display-list-item switch-display-list-item--border"><span class="display-options-list"></span></li>
					<li class="switch-display-list-item"><span class="display-options-grid"></span></li>
				</ul> 
			</div>
		</div>
	</div>
	<div class="gmap-wrapper">
		<div id="gmap"></div>
		<div class="gmap-hotel">
			<div class="hotel-item-map">
				<div class="hotel-map-close"></div>
				<div class="hotel-item-grid-price">&euro; 229,- p.p.</div>
				<div class="hotel-item-grid-body">
					<div class="hotel-item-grid-image">
						<div class="img-container img-ratio-2-1">
							<img src="http://dummyimage.com/400x400/fff/fff.png" data-src="assets/img/hotel.jpg" alt="" class="img-responsive lazyimage">
						</div>
					</div>
					<div class="hotel-item-grid-content">
						<div class="title">Hilton Hotel</div>
						<div class="rating">
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star"></i>
							<i class="fa fa-star-half-o"></i>
							<i class="fa fa-star-o"></i>
						</div>
						<div class="intro">
							The 4-star Absolutum Boutique Hotel is a newly renovated and modern hotel situated in the heart of Prague.
						</div>
					</div>
				</div>
				<div class="clearfix facilities">
					<div>
						<ul class="facilities-list clearfix">
							<li class="BRBF">Breakfast Buffet</li>
							<li class="CUEX">Currency Exchange</li>
							<li class="FD24">Front Desk 24/7</li>
							<li class="INWI">Wi/Fi Wireless LAN</li>
						</ul>
					</div>
					<div>
						<a href="" class="button button--primary button--block">select hotel</a>
					</div>
				</div>
				
			</div>
		</div>
	</div>
	
